<%-include('../header')%>
        <h1>Nova Publicação</h1>
        <form action="/publicacoes/nova" method="post">
            <div class="form-group">
                <label for="publicacao">Titulo</label>
                <input type="text" required name="publicacao" id="publicacao" class="form-control" placeholder="Digite o titulo...">
            </div>
            
            <div class="form-group">
                    <label for="publicacao">Categoria</label>
                    <select name="categoria" id="categoria" class="form-control" required aria-placeholder="Selecione uma Categoria">
                            <option value="" disablea>Selecione uma categoria</option>
                            <%categorias.forEach(categoria => {%>
                                <option value="<%=categoria.id%>"><%=categoria.categoria%></option>
                                <%})%>
                    </select>
                </div>

            <div class="form-group">
                    <label for="publicacao">Nova Publicação</label>
                    <textarea class="form-control" name="conteudo" required id="" cols="30" rows="10" placeholder="Digite o conteudo"></textarea>
            </div>
            <div class="form-group">
                <input type="submit" value="Salvar" class="btn btn-outline">
            </div>
        </form>
 <%-include('../footer')%>