<%-include('../header')%>
        <h1>Listagem de Categorias</h1>
        <table class="table table-hover">
            <tr>
                <th>Categoria</th>
                <th>Ações</th>
            </tr>
            <%categorias.forEach(categoria => {%>
            <tr>
                <td>
                    <a href="/publicacoes/categoria/<%=categoria.id%>"><%=categoria.categoria%></a>
                </td>
                <td><a href="/categorias/excluir/<%=categoria.id%>"><span class="glyphicon glyphicon-trash"></span></a> 
                    | <a href="/categorias/editar/<%=categoria.id%>"><span class="glyphicon glyphicon-edit"></span></a></td>
            </tr>
            <%})%>
        </table>
        <div class="form-group">
            <a href="/categorias/nova" class="btn btn-primary">Nova Categoria</a> 
       
            <a href="/publicacoes/nova" class="btn btn-primary">Nova Publicação</a>
        </div>

    <%-include('../footer')%>